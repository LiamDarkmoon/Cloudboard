---
import '../styles/global.css'
import Footer from "../components/Footer.astro";
import HeaderNav from "../components/HeaderNav.astro";
import SideBar from "../components/SideBar.astro";
import Main from "./Main.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Cloudboard - track & analitycs </title>
		<script src="https://cloudapi-chi.vercel.app/tracker.js?v=1" defer></script>
	</head>
	<body class="layout">
		<HeaderNav/>
		<SideBar/>
		<Main>
			<slot/>
		</Main>
		<Footer/>
	</body>
</html>

<style is:global>
	.cta_bttn {
		background-color: var(--main-accent-color);
		color: var(--main-bg-color);
    border: none;
    padding: 16px 32px;
    text-align: center;
    display: inline-block;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 8px;
	}

	.cta_bttn:hover {
		transform: scale(1.1);
	  background-color: var(--main-accent-color-hover);
	}

	.cta_bttn:active {
		transform: scale(0.9)
	}

	.hide-scrollbar {
  scrollbar-width: none;        /* Firefox */
  -ms-overflow-style: none;     /* IE / Edge viejo */
}

.hide-scrollbar::-webkit-scrollbar {
  display: none;                /* Chrome / Safari */
}

</style>

<style>
	:root{
		--main-bg-color: #0E1114;
		--main-text-color: #EAECEE;
		--main-divider-color: #2A2F35;
		--main-accent-color: #1DE9B6;
		--main-accent-color-hover: #00C9A7;
		--main-accent-color-active: #00C9A7;
		--main-accent-color-disabled: #00C9A7;

		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		background-color: var(--main-bg-color);
		color: var(--main-text-color);
	}
	html,
	body {
		box-sizing: border-box;
		margin: 0;
		width: 100%;
		max-width: 100vw;
		height: 100%;
		min-height: 100vh;
	}

	.layout {
	  display: grid;
		grid-template-columns: 250px repeat(2, 1fr);
		grid-template-rows: 100px 1fr 100px;
		grid-gap: 10px;
		padding: 5px 10px 0 10px;
	}

	@media (max-width: 680px) {
		.layout {
			grid-template-columns: 1fr;
	}
}
</style>
